<p id="notice"><%= notice %></p>

<h1>Rewards</h1>

<div class="row">
    <% @rewards.each do |reward| %>
      <div class="col-md-3">
        <div class="row">
          <div class="col-md-6">
            <%= image_tag reward.pic.url %>
          </div>
          <div class="col-md-6">
            <p><%= reward.description %></p>

            Points needed : <%= reward.points %>
            <%= link_to 'Redeem', redeem_reward_path(reward), class: 'btn btn-success' %>
            <%# link_to 'Edit', edit_reward_path(reward) %>
            <%# link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
        <div class="row">
          <h2><%= link_to reward.title, reward %></h2>
        </div>  
      </div>
    <% end %>
</div>
<br>

<%= link_to 'New Reward', new_reward_path %>
